        </tr>

        {% set i=0 %}
        {% for e in values %}
            {% set i=i+1 %}
            {% if i is odd %}
                <tr bgcolor="#88C56D">
            {% else %}
                <tr bgcolor="#DAEAD3">
            {% endif %}
            <td>{{e.getIdVoyage().getIdTransport()}}</td>
            <td>{{e.getIdVoyageur().getNom()}}</td>
            <td>{{e.getIdVoyageur().getPrenom()}}</td>
            <td>{{e.getIdVoyageur().getMail()}}</td>
            <td>{{e.getIdVoyageur().getTelephone()}}</td>
            </tr>
        {% endfor %}
    </table>
    {% endblock %}
    </body>
</html>




